<div class="container">
  <header id="page-header" class="profile">
    <section id="user-data">
      <div class="content-flex avatar upload-file">
        <%= image_tag current_user.avatar(:medium), data: {id: "avatar"}, onerror:"this.onerror=null;this.src='#{image_url('no-image.png')}';" %>
      </div>
      <div class="content-next-avatar">
        <h1>
          <span class="clear" data-id="user_first_name"><%= current_user.first_name %></span> <br>
          <span class="last-name" data-id="user_last_name"><%= current_user.last_name %></span>
        </h1>
        <ul>
          <li data-id="user_email"><%= current_user.email %></li>
        </ul>
      </div>
    </section>
  </header>
  <section class="clearfix">
    <h2><%= t 'my_profile' %></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "main-form live-edit-form validate-password-form" }) do |f| %>
      <%= devise_error_messages! %>
      <div class="row">
        <div class="col-md-6 margin-bot-15">
          <div class="row">
            <%= f.label :email, class: "required col-md-2" %>
            <div class="col-md-10">
              <%= f.email_field :email, class: "form-control", required: true, autofocus: true %>
            </div>
          </div>
        </div>
        <div class="col-md-6 margin-bot-15">
          <div class="row">
            <div class="file-upload-container">
              <div class="col-md-2">
                <span><%= t('avatar_label') %></span>
              </div>
              <div class="col-md-10">
                <%= f.label :avatar %>
                <%= f.file_field :avatar, autofocus: true %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 margin-bot-15">
          <div class="row">
            <%= f.label :first_name, class: "required col-md-2" %>
            <div class="col-md-10">
              <%= f.text_field :first_name, class: "form-control", required: true %>
            </div>
          </div>
        </div>
        <div class="col-md-6 margin-bot-15">
          <div class="row">
            <%= f.label :last_name, class: "required col-md-2" %>
            <div class="col-md-10">
              <%= f.text_field :last_name, class: "form-control", required: true %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 margin-bot-15">
          <div class="row">
            <%= f.label :password, class: "col-md-2" %>
            <div class="col-md-10">
              <%= f.password_field :password, class: "form-control", placeholder: t('leave_blank_if_no_change'), autocomplete: "off" %>
            </div>
          </div>
        </div>
        <div class="col-md-6 margin-bot-15">
          <div class="row">
            <%= f.label :password_confirmation, class: "col-md-2" %>
            <div class="col-md-10">
              <%= f.password_field :password_confirmation, class: "form-control", placeholder: t('leave_blank_if_no_change'), autocomplete: "off" %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 margin-bot-15">
          <div class="row">
            <%= f.label :current_password, class: "col-md-1" %>
            <div class="col-md-11">
              <%= f.password_field :current_password, class: "form-control", placeholder: t('required_to_save_change'), autocomplete: "off" %>
            </div>
          </div>
        </div>
      </div>
      <div class="pull-right">
        <%= f.submit nil, class: "btn btn-primary" %>
      </div>
    <% end %>
  </section>
</div>

