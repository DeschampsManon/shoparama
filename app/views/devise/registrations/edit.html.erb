<div class="container">
  <header id="page-header" class="profile">
    <section id="user-data">
      <div class="content-flex avatar upload-file">
        <%= image_tag current_user.avatar(:medium), data: {id: "avatar"}, onerror:"this.onerror=null;this.src='#{image_url('no-image.png')}';" %>
      </div>
      <div class="content-next-avatar">
        <h1>
          <span class="clear" data-id="user_first_name"><%= current_user.first_name %></span> <br>
          <span class="last-name" data-id="user_last_name"><%= current_user.last_name %></span>
        </h1>
        <ul>
          <li data-id="user_email"><%= current_user.email %></li>
        </ul>
      </div>
    </section>
  </header>
  <section class="clearfix padding-bot-40">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "main-form" }) do |f| %>
        <%= devise_error_messages! %>
        <div class="row margin-bot-15">
          <div class="col-md-6">
            <%= f.label :email, class: "required" %>
            <%= f.email_field :email, class: "form-control", required: true, autofocus: true %>
          </div>
          <div class="col-md-6">
            <div class="file-upload-container">
              <span><%= t('avatar_label') %></span>
              <%= f.label :avatar %>
              <%= f.file_field :avatar, autofocus: true %>
            </div>
          </div>
        </div>
        <div class="row margin-bot-15">
          <div class="col-md-6">
            <%= f.label :first_name, class: "required" %><br />
            <%= f.text_field :first_name, required: true, class: "form-control" %>
          </div>
          <div class="col-md-6">
            <%= f.label :last_name, class: "required" %><br />
            <%= f.text_field :last_name, required: true, class: "form-control" %>
          </div>
        </div>
        <div class="row margin-bot-15">
          <div class="col-md-4">
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control", placeholder: t('leave_blank_if_no_change'), autocomplete: "off" %>
          </div>
          <div class="col-md-4">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: t('leave_blank_if_no_change'), autocomplete: "off" %>
          </div>
          <div class="col-md-4">
            <%= f.label :current_password, class: "required" %>
            <%= f.password_field :current_password, required: true, class: "form-control", placeholder: t('required_to_save_change'), autocomplete: "off" %>
          </div>
        </div>
        <div class="pull-right">
          <%= f.submit nil, class: "btn btn-primary" %>
        </div>
    <% end %>
  </section>
</div>

