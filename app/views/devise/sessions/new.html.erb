<div class="container">
  <header id="page-header">
    <div class="col-md-5">
      <h2>shoparama</h2>
      <h1><%= raw t('.page_title') %></h1>
    </div>
    <div class="col-md-7">
      <%= render 'shared/search_form' %>
    </div>
  </header>
  <section class="clearfix">
    <div class="row">
      <div class="col-md-6">
        <h2><%= t 'register' %></h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "main-form validate-password-form" } ) do |f| %>
            <%= devise_error_messages! %>
            <div class="row">
              <div class="col-md-12 margin-bot-15">
                <div class="row">
                  <%= f.label :email, class: "required col-md-2" %>
                  <div class="col-md-10">
                    <%= f.email_field :email, class: "form-control", required: true, autofocus: true %>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 margin-bot-15">
                <div class="row">
                  <%= f.label :first_name, class: "required col-md-4" %>
                  <div class="col-md-8">
                    <%= f.text_field :first_name, class: "form-control", required: true %>
                  </div>
                </div>
              </div>
              <div class="col-md-6 margin-bot-15">
                <div class="row">
                  <%= f.label :last_name, class: "required col-md-4" %>
                  <div class="col-md-8">
                    <%= f.text_field :last_name, class: "form-control", required: true %>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 margin-bot-15">
                <div class="row">
                  <%= f.label :password, class: "required col-md-4" %>
                  <div class="col-md-8">
                    <%= f.password_field :password, class: "form-control", required: true, autocomplete: "off" %>
                  </div>
                </div>
              </div>
              <div class="col-md-6 margin-bot-15">
                <div class="row">
                  <%= f.label :password_confirmation, class: "required col-md-4" %>
                  <div class="col-md-8">
                    <%= f.password_field :password_confirmation, class: "form-control", required: true, autocomplete: "off" %>
                  </div>
                </div>
              </div>
            </div>
            <div class="pull-right">
              <%= f.submit t('create_account'), class: "btn btn-primary" %>
            </div>
        <% end %>
      </div>
      <div class="col-md-6">
        <h2><%= t 'login' %></h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "main-form validate-simple", id: "log-user"}) do |f| %>
            <%= render 'devise/shared/error_messages' %>
            <div class="row">
              <div class="col-md-12 margin-bot-15">
                <div class="row">
                  <%= f.label :email, class: "col-md-2" %>
                  <div class="col-md-10">
                    <%= f.email_field :email, class: "form-control", required: true, autofocus: true %>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 margin-bot-15">
                <div class="row">
                  <%= f.label :password, class: "col-md-2" %>
                  <div class="col-md-10">
                    <%= f.password_field :password, class: "form-control", required: true, autocomplete: "off" %>
                  </div>
                </div>
              </div>
            </div>
            <% if devise_mapping.rememberable? -%>
                <div class="row">
                  <div class="col-md-12 margin-bot-15">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                </div>
            <% end -%>
            <div class="pull-left">
              <%= render 'devise/shared/links' %>
            </div>
            <div class="pull-right">
              <%= f.submit t('login'), class:"btn btn-primary" %>
            </div>
        <% end %>
      </div>
    </div>
  </section>
</div>

